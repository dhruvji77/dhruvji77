<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Challenge Popup Template</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Gramatika:wght@400;700&display=swap');

        /* Your existing CSS styles */
    </style>
</head>
<body>
    <div class="popup-container">
        <div class="popup" id="popup">
            <button class="close" onclick="closePopup()">âœ–</button>
            <div class="content">
                <div class="headline" id="headline">Challenge - ID 123</div>
                <div class="subheadline">Congratulations on completing "Pause the Molandak Challenge"</div>
                <img src="" alt="Screenshot" class="screenshot" id="screenshot">
                <div class="buttons">
                    <button class="button screenshot-button" onclick="captureScreenshot()">
                        <img src="https://img.icons8.com/material-outlined/24/000000/camera.png" alt="Screenshot">
                        Capture Screenshot
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.5.0-beta4/html2canvas.min.js"></script>
    <script>
        function closePopup() {
            document.getElementById('popup').style.display = 'none';
        }

        function getQueryParam(name) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(name);
        }

        function setHeadlineAndScreenshot() {
            const challengeId = getQueryParam('challengeId');
            const gifUrl = getQueryParam('gifUrl');

            if (challengeId && gifUrl) {
                const headline = document.getElementById('headline');
                headline.textContent = `Challenge - ID ${challengeId}`;
                
                const screenshot = document.getElementById('screenshot');
                screenshot.src = `${gifUrl}?${new Date().getTime()}`;
            } else {
                console.error('Challenge ID or GIF URL not provided.');
            }
        }

        function captureScreenshot() {
            html2canvas(document.querySelector('.popup-container')).then(canvas => {
                const link = document.createElement('a');
                link.href = canvas.toDataURL('image/png');
                link.download = 'popup-screenshot.png';
                link.click();
            });
        }

        setHeadlineAndScreenshot();
    </script>
</body>
</html>
